@model OMSys.Models.DiagnosisStep

@{
    ViewData["Title"] = "Create Diagnosis Step";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="SymptomId" class="form-label">Symptom Name</label>
                <select asp-for="SymptomId" class="form-select" asp-items="ViewBag.SymptomId"></select>
                <span asp-validation-for="SymptomId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Diagnosis" class="form-label"></label>
                <textarea asp-for="Diagnosis" class="form-control"></textarea>
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StepOrder" class="form-label"></label>
                <input asp-for="StepOrder" class="form-control" />
                <span asp-validation-for="StepOrder" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Instruction" class="form-label"></label>
                <textarea asp-for="Instruction" class="form-control"></textarea>
                <span asp-validation-for="Instruction" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Upload Image</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
