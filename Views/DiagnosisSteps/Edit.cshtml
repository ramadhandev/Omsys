@model OMSys.Models.DiagnosisStep

@{
    ViewData["Title"] = "Edit Diagnosis Step";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="StepId" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="SymptomId" class="form-label"></label>
                    <select asp-for="SymptomId" class="form-select" asp-items="@(ViewData["SymptomId"] as SelectList)"></select>
                    <span asp-validation-for="SymptomId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Diagnosis" class="form-label"></label>
                    <textarea asp-for="Diagnosis" class="form-control"></textarea>
                    <span asp-validation-for="Diagnosis" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StepOrder" class="form-label"></label>
                    <input asp-for="StepOrder" class="form-control" />
                    <span asp-validation-for="StepOrder" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Instruction" class="form-label"></label>
                    <textarea asp-for="Instruction" class="form-control"></textarea>
                    <span asp-validation-for="Instruction" class="text-danger"></span>
                </div>

                @* Preview gambar lama jika ada *@
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mb-3">
                        <label class="form-label">Gambar Saat Ini:</label>
                        <div>
                            <img src="@Model.ImagePath" class="img-fluid rounded mb-2" style="max-height:200px;" />
                        </div>
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label">Ganti / Upload Gambar Baru:</label>
                    <input type="file" name="ImageFile" class="form-control" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
