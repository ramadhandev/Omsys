@model OMSys.Models.DiagnosisStep

@{
    ViewData["Title"] = "Delete Diagnosis Step";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white fw-bold">
        <i class="bi bi-exclamation-triangle-fill"></i> Delete Diagnosis Step
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this step?</h5>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StepOrder)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.StepOrder)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Instruction)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Instruction)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Symptom)</dt>
            <dd class="col-sm-9">
                @(Model.Symptom != null ? Model.Symptom.SymptomName : "N/A")
            </dd>
        </dl>

        <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this step?');">
            <input type="hidden" asp-for="StepId" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>
