@model OMSys.Models.DiagnosisStep

@{
    ViewData["Title"] = "Delete Diagnosis Step";
}

<h1 class="mb-4 text-danger">Delete Diagnosis Step</h1>

<h4>Are you sure you want to delete this?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StepOrder)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.StepOrder)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Instruction)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Instruction)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Symptom)</dt>
    <dd class="col-sm-9">@(Model.Symptom?.SymptomName ?? "N/A")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="StepId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
