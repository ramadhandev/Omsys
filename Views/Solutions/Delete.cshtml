@model OMSys.Models.Solution

@{
    ViewData["Title"] = "Delete Solution";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white text-center py-3">
            <h3 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Confirm Delete
            </h3>
        </div>
        <div class="card-body p-4">
            <h5 class="text-danger fw-bold">Are you sure you want to delete this Solution?</h5>
            <p class="text-muted">This action cannot be undone.</p>
            <hr />

            <dl class="row">
                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.IndicationAndRepair)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IndicationAndRepair)</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.Symptom)</dt>
                <dd class="col-sm-8">@(Model.Symptom?.SymptomName ?? "N/A")</dd>
            </dl>

            <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
                <input type="hidden" asp-for="SolutionId" />
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash-fill"></i> Delete
                </button>
            </form>
        </div>
    </div>
</div>
