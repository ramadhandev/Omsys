@model OMSys.Models.Solution

@{
    ViewData["Title"] = "Delete Solution";
}

<h1 class="mb-4 text-danger">Delete Solution</h1>

<h4>Are you sure you want to delete this?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IndicationAndRepair)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.IndicationAndRepair)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Symptom)</dt>
    <dd class="col-sm-9">@(Model.Symptom?.SymptomName ?? "N/A")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="SolutionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
