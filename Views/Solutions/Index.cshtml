@model IEnumerable<OMSys.Models.Solution>

@{
    ViewData["Title"] = "Solutions";
    var totalItems = ViewBag.TotalItems as int? ?? 0;
    var page = ViewBag.Page as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 10;
    var search = ViewBag.Search as string;
    var totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
    var filter = ViewData["Filter"] as string;
    var symptoms = ViewData["Symptoms"] as SelectList;
    var selectedSymptomId = ViewData["SymptomId"] as int? ?? 0;
   
}

<div class="row mb-3">
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-success" style="min-width:150px;">+ Create New</a>
    </div>
</div>

<div class="mb-3 d-flex justify-content-between align-items-center">
    
    <form method="get" asp-action="Index" class="d-flex align-items-center">
        <select name="symptomId" class="form-select me-2">
            <!-- Option "All Symptoms" -->
            @if (selectedSymptomId == 0)
            {
                <option value="0" selected>-- All Symptoms --</option>
            }
            else
            {
                <option value="0">-- All Symptoms --</option>
            }

            <!-- Loop untuk semua symptoms -->
            @if (symptoms != null)
            {
                foreach (var symptom in symptoms)
                {
                    if (symptom.Value == selectedSymptomId.ToString())
                    {
                        <option value="@symptom.Value" selected>@symptom.Text</option>
                    }
                    else
                    {
                        <option value="@symptom.Value">@symptom.Text</option>
                    }
                }
            }
        </select>


        <button type="submit" class="btn btn-primary">Filter</button>
    </form>
   
</div>

<form asp-action="BulkDelete" method="post">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th><input type="checkbox" id="selectAll" onclick="toggleAll(this)" /></th>
                <th>@Html.DisplayNameFor(model => model.IndicationAndRepair)</th>
                <th>@Html.DisplayNameFor(model => model.Symptom)</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedIds" value="@item.SolutionId" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.IndicationAndRepair)</td>
                    <td>@(item.Symptom?.SymptomName ?? "N/A")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SolutionId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.SolutionId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-danger">Delete Selected</button>
</form>

<!-- Pagination -->
<nav class="mt-3">
    <ul class="pagination">
        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == page ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-filter="@filter">@i</a>
            </li>
        }
    </ul>
</nav>

@section Scripts {
 <script src="~/js/Custom.js"></script>
    
}
