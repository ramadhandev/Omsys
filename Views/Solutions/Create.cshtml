@model OMSys.Models.Solution

@{
    ViewData["Title"] = "Create Solution";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white fw-bold">
        <i class="bi bi-plus-circle"></i> @ViewData["Title"]
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Symptom -->
            <div class="mb-3">
                <label asp-for="SymptomId" class="form-label fw-bold"></label>
                <select asp-for="SymptomId" class="form-select" asp-items="ViewBag.SymptomId"></select>
                <span asp-validation-for="SymptomId" class="text-danger"></span>
            </div>

            <!-- Indication & Repair -->
            <div class="mb-3">
                <label asp-for="IndicationAndRepair" class="form-label fw-bold"></label>
                <textarea asp-for="IndicationAndRepair" class="form-control" rows="4"
                          placeholder="Enter indication and repair steps..."></textarea>
                <span asp-validation-for="IndicationAndRepair" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
