@model OMSys.Models.Unit
@{
    ViewData["Title"] = "Delete Unit";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white fw-bold">
        <i class="bi bi-trash"></i> Delete Unit
    </div>
    <div class="card-body">
        <p class="text-danger fw-bold">Are you sure you want to delete this unit?</p>

        <dl class="row">
            <dt class="col-sm-3">Unit Name</dt>
            <dd class="col-sm-9">@Model.UnitName</dd>

            <dt class="col-sm-3">Brand</dt>
            <dd class="col-sm-9">@Model.Brand</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="UnitId" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </form>
    </div>
</div>
