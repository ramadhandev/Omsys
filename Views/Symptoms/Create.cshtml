@model OMSys.Models.Symptom

@{
    ViewData["Title"] = ViewData["Title"] ?? "Create Symptom";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="ComponentId" class="form-label"></label>
                    <select asp-for="ComponentId" class="form-select" asp-items="ViewBag.ComponentId"></select>
                    <span asp-validation-for="ComponentId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SymptomCode" class="form-label"></label>
                    <input asp-for="SymptomCode" class="form-control" />
                    <span asp-validation-for="SymptomCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SymptomName" class="form-label"></label>
                    <input asp-for="SymptomName" class="form-control" />
                    <span asp-validation-for="SymptomName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
