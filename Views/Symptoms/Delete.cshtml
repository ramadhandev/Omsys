@model OMSys.Models.Symptom

@{
    ViewData["Title"] = "Delete Symptom";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Confirm Delete</h3>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this symptom?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SymptomCode)</dt>
                <dd class="col-sm-9">@Model.SymptomCode</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SymptomName)</dt>
                <dd class="col-sm-9">@Model.SymptomName</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Component)</dt>
                <dd class="col-sm-9">@Model.Component?.Name</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="SymptomId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
