@model IEnumerable<OMSys.Models.Symptom>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SymptomCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SymptomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Component)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SymptomCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SymptomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Component.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SymptomId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SymptomId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SymptomId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
