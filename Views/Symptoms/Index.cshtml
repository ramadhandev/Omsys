@model IEnumerable<OMSys.Models.Symptom>
@{
    ViewData["Title"] = "Symptoms";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Symptoms List</h3>
            <a asp-action="Create" class="btn btn-primary btn-sm">+ Create New</a>
        </div>
        <div class="card-body">

            <!-- 🔍 Search & Filter Form -->
            <form asp-action="Index" method="get" class="mb-3">
                <div class="row g-3">
                    <div class="col-md-6">
                        <input type="text" name="searchString" value="@ViewBag.CurrentFilter"
                               class="form-control" placeholder="Search symptoms..." />
                    </div>
                    <div class="col-md-4">
                        <select name="componentId" asp-items="ViewBag.Components" class="form-select">
                            <option value="">-- All Components --</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-dark w-100">Apply</button>
                    </div>
                </div>
            </form>

            <!-- Clear Filters Button -->
            @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter) || ViewBag.SelectedComponentId != null)
            {
                <div class="mb-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        Clear Filters
                    </a>
                </div>
            }

            <!-- 🗑 Bulk Delete Form -->
            <form asp-action="DeleteSelected" method="post">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th><input type="checkbox" id="selectAll" /></th>
                            <th>@Html.DisplayNameFor(model => model.First().SymptomCode)</th>
                            <th>@Html.DisplayNameFor(model => model.First().SymptomName)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Component)</th>
                            <th style="width:150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="selectedIds" value="@item.SymptomId" /></td>
                                <td>@item.SymptomCode</td>
                                <td>@item.SymptomName</td>
                                <td>@item.Description</td>
                                <td>@item.Component?.Name</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.SymptomId" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.SymptomId" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <button type="submit" class="btn btn-danger mt-2">
                    Delete Selected
                </button>
            </form>

            <!-- 📑 Pagination -->
            <nav class="mt-3">
                <ul class="pagination">
                    <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-searchString="@ViewBag.CurrentFilter"
                           asp-route-componentId="@ViewBag.SelectedComponentId"
                           asp-route-pageNumber="@(ViewBag.CurrentPage - 1)">Previous</a>
                    </li>

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-searchString="@ViewBag.CurrentFilter"
                               asp-route-componentId="@ViewBag.SelectedComponentId"
                               asp-route-pageNumber="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-searchString="@ViewBag.CurrentFilter"
                           asp-route-componentId="@ViewBag.SelectedComponentId"
                           asp-route-pageNumber="@(ViewBag.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Custom.js"></script>
}