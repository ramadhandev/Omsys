<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OMSys</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CustomStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar d-flex flex-column p-3">
        <a class="navbar-brand mb-3" asp-controller="Dashboard" asp-action="Index">OMSys</a>

        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Troubleshooting") ? "active" : "")"
                   asp-controller="Troubleshooting" asp-action="Index">View Page</a>
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item"><a class="nav-link" asp-controller="Units" asp-action="Index">Units</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Components" asp-action="Index">Components</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Symptoms" asp-action="Index">Symptoms</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="DiagnosisSteps" asp-action="Index">Diagnosis Steps</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="StepResults" asp-action="Index">Step Results</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Solutions" asp-action="Index">Solutions</a></li>
            }
        </ul>

        <hr />
        <div class="mt-auto">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <span class="d-block mb-2">Hello, @User.Identity.Name</span>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-sm btn-outline-danger w-100">Logout</button>
                </form>
            }
            else
            {
                <a class="btn btn-sm btn-outline-primary w-100" asp-controller="Account" asp-action="Login">Login</a>
            }
        </div>
    </nav>

    <!-- Content -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
