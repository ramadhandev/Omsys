@model OMSys.Models.StepResult

@{
    ViewData["Title"] = "Create Step Result";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create Step Result</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="StepId" class="form-label">Step</label>
                    <select asp-for="StepId" class="form-select" asp-items="ViewBag.StepId"></select>
                    <span asp-validation-for="StepId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ResultOption" class="form-label"></label>
                    <input asp-for="ResultOption" class="form-control" />
                    <span asp-validation-for="ResultOption" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NextStepId" class="form-label"></label>
                    <select asp-for="NextStepId" class="form-select" asp-items="ViewBag.NextStepId"></select>
                    <span asp-validation-for="NextStepId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SolutionId" class="form-label"></label>
                    <select asp-for="SolutionId" class="form-select" asp-items="ViewBag.SolutionId"></select>
                    <span asp-validation-for="SolutionId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
