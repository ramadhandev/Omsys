@model IEnumerable<OMSys.Models.Component>
@{
    ViewData["Title"] = "Components";
}


<div class="card shadow-sm">
    <div class="card-header bg-light fw-bold d-flex justify-content-between align-items-center">
        <span><i class="bi bi-list-ul"></i> Component List</span>
        <a asp-action="Create" class="btn btn-sm btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card-body">

        <!-- 🔍 Filter Form -->
        <form asp-action="Index" method="get" class="mb-3">
            <div class="row g-3">
                <div class="col-md-6">
                    <select name="unitId" asp-items="ViewBag.Units" class="form-select">
                        <option value="">-- All Units --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark w-100">Filter</button>
                </div>
            </div>
        </form>

        <!-- Clear Filters Button -->
        @if (ViewBag.SelectedUnitId != null)
        {
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    Clear Filter
                </a>
            </div>
        }

        <!-- 🗑 Bulk Delete Form -->
        <form asp-action="DeleteSelected" method="post">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th><input type="checkbox" id="selectAll" /></th>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Unit)</th>
                        <th style="width:180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="selectedIds" value="@item.ComponentId" /></td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@(item.Unit?.UnitName ?? "N/A")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ComponentId" class="btn btn-sm btn-warning text-white">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ComponentId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <button type="submit" class="btn btn-danger mt-2">
                Delete Selected
            </button>
        </form>

        <!-- 📑 Pagination -->
        <nav class="mt-3">
            <ul class="pagination">
                <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-unitId="@ViewBag.SelectedUnitId"
                       asp-route-pageNumber="@(ViewBag.CurrentPage - 1)">Previous</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-unitId="@ViewBag.SelectedUnitId"
                           asp-route-pageNumber="@i">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-unitId="@ViewBag.SelectedUnitId"
                       asp-route-pageNumber="@(ViewBag.CurrentPage + 1)">Next</a>
                </li>
            </ul>
        </nav>

    </div>
</div>

@section Scripts {
  <script src="~/js/Custom.js"></script>
}